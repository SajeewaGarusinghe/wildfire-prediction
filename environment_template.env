# Environment variables for Wildfire Risk Prediction System

# API Keys
NOAA_API_KEY=your_noaa_api_key_here
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Google Earth Engine
GEE_SERVICE_ACCOUNT=path/to/your/gee-service-account.json

# Database Configuration
DATABASE_PATH=data/wildfire_predictions.db

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_secret_key_here

# Logging
LOG_LEVEL=INFO

# Model Configuration
RANDOM_SEED=42

# Study Area (Riverside County, CA by default)
MIN_LAT=33.3
MAX_LAT=34.0
MIN_LON=-117.7
MAX_LON=-115.2
